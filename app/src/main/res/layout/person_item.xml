<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_person_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/iv_member_head"
        android:layout_width="75dp"
        android:layout_height="64dp"
        android:src="@drawable/testperson"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_member_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:text="昵称昵称昵称"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/iv_member_head"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_member_head" />

    <TextView
        android:id="@+id/reputationtip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_member_nickname"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:maxEms="13"
        android:maxLines="1"
        android:text="信誉评分："
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_member_head"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/iv_member_head"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_member_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_member_nickname"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:maxEms="13"
        android:maxLines="1"
        android:text="90"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_member_head"
        app:layout_constraintLeft_toRightOf="@id/reputationtip" />

</androidx.constraintlayout.widget.ConstraintLayout>