<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/msg_nickname_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/chat_pic_right"
        android:gravity="top"
        android:text="test"
        android:textColor="#FF9800"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/msg_time_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/msg_nickname_right"
        android:gravity="top"
        android:text="8:15 PM"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/msg_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/msg_time_right"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/chat_pic_right"
        android:background="@drawable/app_lvjian_chat_right"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:text="AS真的傻逼！！"
        android:textColor="#4C4A4A" />


    <ImageView
        android:id="@+id/chat_pic_right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="top"
        android:src="@drawable/testperson" />

</RelativeLayout>